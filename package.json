{
	"name": "svelte-apollo",
	"version": "0.4.0",
	"author": "Tim Hall <tim.hall.engr@gmail.com>",
	"license": "MIT",
	"repository": "https://github.com/timhall/svelte-apollo.git",
	"type": "module",
	"main": "./dist/svelte-apollo.js",
	"exports": {
		".": "./dist/svelte-apollo.js"
	},
	"types": "dist/svelte-apollo.d.ts",
	"keywords": [
		"svelte",
		"apollo",
		"graphql",
		"svelte-kit"
	],
	"scripts": {
		"build": "rollup -c",
		"dev": "rollup -c -w",
		"prepublishOnly": "npm run build",
		"test": "jest",
		"typecheck": "tsc --noEmit",
		"format": "prettier --write \"src/**/*.ts\""
	},
	"peerDependencies": {
		"@apollo/client": "^3.0.0",
		"graphql": "^0.11.0 || ^0.12.0 || ^0.13.0 || ^14.0.0 || ^15.0.0 || ^16.0.0",
		"svelte": "^3.0.0"
	},
	"devDependencies": {
		"@apollo/client": "^3.5.9",
		"@jest/globals": "^27.5.1",
		"@rollup/plugin-typescript": "^6.1.0",
		"graphql": "^15.8.0",
		"jest": "^27.5.1",
		"prettier": "^2.5.1",
		"rollup": "^2.67.3",
		"rollup-plugin-dts": "^1.4.14",
		"rollup-plugin-filesize": "^9.1.2",
		"svelte": "^3.46.4",
		"ts-jest": "^27.1.3",
		"tslib": "^2.3.1",
		"typescript": "^4.5.5"
	},
	"jest": {
		"testEnvironment": "node",
		"preset": "ts-jest"
	},
	"files": [
		"dist"
	],
	"pnpm": {
		"overrides": {
			"json-schema@<0.4.0": ">=0.4.0",
			"nanoid@<3.1.31": ">=3.1.31"
		}
	}
}
