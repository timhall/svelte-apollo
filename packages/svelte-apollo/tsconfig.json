{
	"compilerOptions": {
		"target": "es2020",
		"lib": ["es2020", "DOM"],
		"module": "es2020",
		"moduleResolution": "node",
		"strict": true,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"noEmit": true
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"src/**/__tests__/**",
		"src/**/__fixtures__/**",
		"src/**/__mocks__/**"
	]
}
